                                            android:id="@+id/vendorBankIFSC"
                                            android:layout_height="wrap_content"
                                            />

                                    </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Approval Amount to Beneficiary"
                android:layout_below="@id/vendorName"
                android:layout_marginTop="30dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/approvalAmountToBeneficiary"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:id="@+id/uploadImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Quotation Image"
                            android:layout_below="@id/password"
                            android:onClick="uploadQuoteImg"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            style="?attr/materialButtonOutlinedStyle"
                            />
            <ProgressBar
                android:id="@+id/pBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:visibility="gone">
            </ProgressBar>
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_below="@id/password"
                android:onClick="submitButton"
                android:layout_marginTop="30dp"
                android:gravity="center"
                style="?attr/materialButtonOutlinedStyle"
                />

        </LinearLayout>
    </ScrollView>


