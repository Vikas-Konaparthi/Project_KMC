                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Enter Vendor Name"
                                        android:layout_below="@id/document"
                                        android:layout_marginTop="30dp"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                        >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:id="@+id/vendorName"
                                            android:layout_height="wrap_content"
                                            />

                                    </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Vendor Agency Name"
                            android:layout_below="@id/document"
                            android:layout_marginTop="30dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:id="@+id/vendorAgency"
                                android:layout_height="wrap_content"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Vendor Bank Name"
                            android:layout_below="@id/document"
                            android:layout_marginTop="30dp"

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:id="@+id/vendorBankName"
                                android:layout_height="wrap_content"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Enter Vendor Bank Account Number"
                                        android:layout_below="@id/vendorName"
                                        android:layout_marginTop="30dp"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                        >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:id="@+id/vendorBankAccountNo"
                                            android:layout_height="wrap_content"
                                            />

                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Enter Vendor Bank IFSC"
                                        android:layout_below="@id/vendorBankAccountNo"
                                        android:layout_marginTop="30dp"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                        >

                                        <com.google.android.material.textfield.TextInputEditText
