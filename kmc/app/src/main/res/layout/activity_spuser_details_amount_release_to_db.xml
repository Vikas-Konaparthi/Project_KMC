<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">


            <TextView
                android:id="@+id/IndividualName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/FatherName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>



            <TextView
                android:id="@+id/Age"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/HouseNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/village"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/mandal"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/district"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/AadharNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/MobileNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/Preferredunit"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/BankName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/BankACCNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/BankIFSC"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbBankName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbAccNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbBankIFSC"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/requestedAmount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/approvedAmount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/dbAmount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <!--            <TextView-->
            <!--                android:id="@+id/dbAmount"-->
            <!--                android:textSize="20sp"-->
            <!--                android:textColor="#000000"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_width="wrap_content"/>-->

            <TextView
                android:id="@+id/psUpload"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document"
                android:layout_below="@id/password"
                android:onClick="document"
                android:layout_marginTop="30dp"
                android:gravity="center"
                style="?attr/materialButtonOutlinedStyle"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Remarks"
                android:layout_below="@id/document"
                android:layout_marginTop="30dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/remarks"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Quotation Amount"
                android:layout_below="@id/document"
                android:layout_marginTop="30dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/spAmountApproved"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/approve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:layout_below="@id/password"
                android:onClick="approve"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:enabled="false"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:layout_below="@id/password"
                android:onClick="reject"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:enabled="false"
                style="?attr/materialButtonOutlinedStyle"
                />
            <!--            <Button-->
            <!--                android:id="@+id/groundImage"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Grounded Image"-->
            <!--                android:layout_below="@id/password"-->
            <!--                android:onClick="groundingImage"-->
            <!--                android:layout_marginTop="30dp"-->
            <!--                android:gravity="center"-->
            <!--                android:enabled="false"-->
            <!--                style="?attr/materialButtonOutlinedStyle"-->
            <!--                />-->

        </LinearLayout>
    </ScrollView>


</LinearLayout>

