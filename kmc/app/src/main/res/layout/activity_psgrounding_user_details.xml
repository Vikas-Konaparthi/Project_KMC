<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">


            <TextView
                android:id="@+id/IndividualName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/FatherName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/Age"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/HouseNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/village"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/mandal"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/district"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/AadharNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/MobileNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


            <TextView
                android:id="@+id/Preferredunit"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/BankName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/BankACCNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/BankIFSC"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbBankName"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbAccNumber"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/DbBankIFSC"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/dbAccount"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/approvalAmount"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Grounding Image"
                android:layout_below="@id/password"
                android:onClick="uploadGroundingImg"
                android:layout_marginTop="30dp"
                android:gravity="center"
                style="?attr/materialButtonOutlinedStyle"
                />
            <ProgressBar
                android:id="@+id/pBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:visibility="gone">
            </ProgressBar>
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_below="@id/password"
                android:onClick="submitButton"
                android:layout_marginTop="30dp"
                android:gravity="center"
                style="?attr/materialButtonOutlinedStyle"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

